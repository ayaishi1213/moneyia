<% unless comments.present? %>
  コメントはまだありません。あなたの経験や知識をコメントしてみましょう！
<% end %>

<% comments.each do |comment| %>
  <% unless comment.id.nil? %>
   <div class="card one-comment">
     <div class="card-body comment-space">
    <p class>
    <%= "#{comment.user.nickname}さん" %>
    </p>
    <p>コメント：<%= comment.text %></p>
    <% if comment.user == current_user %>
      <p><%= link_to 'コメントを削除する', post_comment_path(comment.post_id, comment.id), 
      method: :delete, remote: true %></p>   
      <%# コントローラーでjsファイルを探す設定 %>
    <% end %>
    <!--コメントへの返信 -->
    <%# <%= render partilal: 'comment_replies/index', locals: { comment: comment} %> 
      </div>
    </div>
  <% end %>
<% end %>